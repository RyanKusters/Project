<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ualberta.cs.cmput301f14t14.questionapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    
	<uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="aandroid.hardware.location.gps"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_qasper_logo_white"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WelcomeScreenActivity"
            android:label="@string/title_activity_welcomes_screen" android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".AnswerViewActivity"
            android:label="@string/title_activity_answer_view" android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".QuestionActivity"
            android:label="@string/title_activity_question" android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search" android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
